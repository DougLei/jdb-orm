<?xml version="1.0" encoding="UTF-8"?>
<mapping-configuration>
	<table name="SYS_USER" class="com.douglei.orm.session.SysUser" createMode="create"><!-- createMode的值包括: none, create, drop_create, dynamic_update, 其中dynamic_update不建议在生产环境中使用 -->
		<columns>
			<!-- dataType的值包括: string, nstring, char, nchar, short, integer, long, float, double, date, clob, blob, 默认值为string -->
			<column name="id" property="id" dataType="string" primaryKey="true" length="30" precision="" nullabled="true" unique="" defaultValue="" check="" fkTableName="" fkColumnName="" validate="true" />
			<column name="name" descriptionName="姓名" property="name" dataType="string" length="30" validate="true" />
		</columns>
		
		<constraints>
			<!-- type的值包括primary_key, unique, default_value, check, foreign_key -->
			
			<constraint type="unique"><!-- primary_key, unique -->
				<column-name value="name" />
			</constraint>
			
			<constraint type="default_value" value="哈哈"><!-- default_value -->
				<column-name value="name" />
			</constraint>
			
			<constraint type="check" expression="name != '哈哈'"><!-- check -->
				<column-name value="name" />
			</constraint>
			
			<constraint type="foreign_key" fkTableName="" fkColumnName=""><!-- foreign_key -->
				<column-name value="name" />
			</constraint>
			
		</constraints>
	</table>
</mapping-configuration>