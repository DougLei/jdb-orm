<?xml version="1.0" encoding="UTF-8"?>
<mapping-configuration>
	<table name="SYS_USER" class="com.douglei.orm.session.SysUser" createMode="create"><!-- createMode的值包括: none, create, drop_create, dynamic_update, 其中dynamic_update不建议在生产环境中使用 -->
		<import-columns path=""/><!-- 从根路径查找, 要导入的列集合, 一般可以将所有表中的通用字段导入 -->
		<columns>
			<!-- dataType的值包括: string, nstring, char, nchar, byte, short, integer, long, float, double, date, clob, blob, 默认值为string -->
			<!-- nullabled默认值为true, validate默认值为false -->
			<column name="id" property="id" dataType="string" primaryKey="true" length="30" precision="" nullabled="true" unique="" defaultValue="" check="" fkTableName="" fkColumnName="" validate="true" />
			<column oldName="NANE" descriptionName="姓名" property="name" dataType="string" length="30" validate="true" unique="true" />
			<column name="age" property="age" dataType="integer" />
			<column name="sex" property="sex" dataType="string" />
		</columns>
		
		
		
		<!-- 
			sqlserver
			create table ddd(
				id int identity primary key,
				name varchar(100)
			);
			
			oracle
			create sequence ddd
		       increment by 1
		       start with 1
		       nomaxvalue
		       nocycle
		       cache 10;
		       
		       select ddd.nextval from dual;
			
			
			mysql
			create table ddd (
				id int auto_increment not null primary key,
				name varchar(100)
			);
		 -->
		<constraints>
			<!-- type = PRIMARY_KEY, UNIQUE, DEFAULT_VALUE(value), CHECK(expression), FOREIGN_KEY(fkTableName, fkColumnName) -->
			<constraint type="" value="" expression="" fkTableName="" fkColumnName="">
				<column-name value="" />
			</constraint>
		</constraints>
		
		<indexes>
			<index name="">
				<createSql dialect=""></createSql>
				<dropSql dialect=""></dropSql>
			</index>
		</indexes>
		
		<!-- 对主键的处理器, 如果不配置, 或不配置type均不起作用, type值包括: uuid32, uuid36, increment, 或自定义的类(继承 {@link PrimaryKeyHandler}) -->
		<primaryKeyHandler type="increment">
			<!-- 序列, 当上面的类型是increment时, 该配置才生效 -->
			<!-- name序列名, 如果不指定, 则系统自动生成一个 -->
			<!-- destroy是否销毁, 指表在被drop时是否删除该序列, 默认值为true  -->
			<!-- 该序列会在表create时跟着create, 在表drop时跟着drop(如果destroy配置了false, 则不会被跟着drop), 其余时候, 不会有任何处理 -->
			<sequence name="" destroy="true">
				<createSql></createSql><!-- 如果不配置, 则使用系统默认的创建语句 -->
				<!--  drop sequence ddd 语句没有特殊化, 所以不用配置, 系统提供 -->
			</sequence>
		</primaryKeyHandler>
	</table>
</mapping-configuration>