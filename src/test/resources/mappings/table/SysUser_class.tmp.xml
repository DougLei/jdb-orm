<?xml version="1.0" encoding="UTF-8"?>
<mapping-configuration>
	<table name="SYS_USER" class="com.douglei.orm.session.SysUser" createMode="create"><!-- createMode的值包括: none, create, drop_create, dynamic_update, 其中dynamic_update不建议在生产环境中使用 -->
		<import-columns path=""/><!-- 从根路径查找, 要导入的列集合, 一般可以将所有表中的通用字段导入 -->
		<columns>
			<!-- dataType的值包括: string, nstring, char, nchar, byte, short, integer, long, float, double, date, clob, blob, 默认值为string -->
			<!-- nullabled默认值为true, validate默认值为false -->
			
			<!-- primaryKeyHandler主键的处理器, 包括的值user, uuid36, uuid32, increment, 默认为user, 用户自定义, 即需要用户手动进行setId()操作 -->
			<column name="id" property="id" dataType="string" primaryKey="true" primaryKeyHandler="" length="30" precision="" nullabled="true" unique="" defaultValue="" check="" fkTableName="" fkColumnName="" validate="true" />
			<column oldName="NANE" descriptionName="姓名" property="name" dataType="string" length="30" validate="true" unique="true" />
			<column name="age" property="age" dataType="integer" />
			<column name="sex" property="sex" dataType="string" />
		</columns>
		
		
		
		<!-- 
			sqlserver
			create table ddd(
				id int identity primary key,
				name varchar(100)
			);
			
			oracle
			create sequence ddd
		       increment by 1
		       start with 1
		       nomaxvalue
		       nocycle
		       cache 10;
		       
		       select ddd.nextval from dual;
			
			
			mysql
			create table ddd (
				id int auto_increment not null primary key,
				name varchar(100)
			);
		 -->
		<constraints>
			<!-- type = PRIMARY_KEY(primaryKeyHandler), UNIQUE, DEFAULT_VALUE(value), CHECK(expression), FOREIGN_KEY(fkTableName, fkColumnName) -->
			<constraint primaryKeyHandler="" type="" value="" expression="" fkTableName="" fkColumnName="">
				<column-name value="" />
			</constraint>
		</constraints>
		
		<!-- 序列, 对应上面primaryKeyType=increment, 且是oracle数据库时 -->
		<!-- name序列名, 如果不指定, 则系统自动生成一个 -->
		<!-- destroyType销毁方式, 即在表被删除时怎样处理该序列: none(不处理),drop(删除), reset(重置)  -->
		<sequence name="" destroyType="">
			<createSql></createSql><!-- 如果不配置, 则使用系统默认的创建语句 -->
			<resetSql></resetSql><!-- 如果不配置, 则使用系统默认的重置语句 -->
			<!--  drop sequence ddd 语句没有特殊化, 所以不用配置, 系统提供 -->
		</sequence>
	</table>
</mapping-configuration>